            //        ID: ($("#KotaID").val()) ? $("#KotaID").val() : 0,
            //        ProvinsiID: $("#dropdownProvinsi").val(),
            //        Name: $('#NamaKota').val(),
            //        Description: $('#DeskripsiKota').val(),
