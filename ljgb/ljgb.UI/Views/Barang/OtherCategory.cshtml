@{
    ViewData["Title"] = "Other Category";
    ViewData["PageName"] = "Other Category";
    ViewData["Category1"] = "Barang";
}


<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    @ViewData["Title"]
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <h5 class="frame-heading">
                        <button type="button" class="btn btn-primary waves-effect waves-themed" data-id="0" data-nama="" data-merk="" data-toggle="modal" data-target="#ModalEdit" id="0" tittle="Add Provinsi"><i class="fal fa-plus-circle"></i>Add</button>
                    </h5>
                    <input type="hidden" class="form-control" id="DealerID">
                    <input type="hidden" class="form-control" id="MerkID">
                    <!-- datatable start -->
                    <table id="tableModelBarang" class="table table-bordered table-hover table-striped w-100">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Model Barang</th>
                                <th>Merk Barang</th>
                                <th>Deskripsi</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
<script type="text/javascript">
    $(document).ready(function () {
        moment.locale('ID');
        var url = "@ViewBag.url_api";


        var table = $('#tableModelBarang').dataTable({
            language: {
                processing: "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
            },
            processing: true,
            serverSide: true,
            initComplete: function () {
                $(this.api().table().container()).find("input").parent().wrap("<form>").parent().attr("autocomplete", "off");
            },
            ajax: {
                url: url + "ModelBarang/GetAll",
                contentType: "application/json",
                type: "GET",
                dataType: "JSON",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                data: function (a) {
                    return a;
                },
                dataSrc: function (json) {
                    json.draw = json.draw;
                    json.recordsTotal = json.recordsTotal;
                    json.recordsFiltered = json.recordsFiltered;
                    json.data = json.listModel;
                    var return_data = json;
                    return return_data.data;
                }
            },
            responsive: true,
            columns: [
                {
                    data: "namaMerk",
                    width: "15%"
                },
                {
                    data: "name",
                    width: "25%"
                },
                {
                    data: "description",
                    width: "15%"
                },
                {
                    mRender: function (a, e, t) {
                        return '<a class="btn btn-xs btn-success waves-effect waves-themed"  data-id="' + t.id + '" data-nama="' + t.name + '" data-merkID="' + t.merkID + '" data-merk="' + t.NamaMerk + '" data-deskripsi="' + t.description + '" data-toggle="modal" data-target="#ModalEdit"><i class="fas fa-edit"></i></a> '
                            + '<a class="btn btn-xs btn-danger waves-effect waves-themed"   data-id="' + t.id + '" data-toggle="modal" data-target="#ModalDelete"><i class="fas fa-trash-alt"></i></a>';
                    },
                    width: "12%"
                }
            ]
        });


        function resetModal() {
            var $t = $('[data-dismiss=modal]'),
                target = $t[0].href || $t.data("target") || $t.parents('.modal') || [];
            $(target)
                .find("input,textarea,select")
                .val('')
                .end()
                .find("input[type=checkbox], input[type=radio]")
                .prop("checked", "")
                .end();
        }

        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    });
</script>
}