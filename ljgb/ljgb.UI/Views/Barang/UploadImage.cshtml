<!-- Modal Add-->
<div class="modal fade  bd-example-modal-lg" tabindex="-1" id="ModalEdit" role="dialog">
    <form class="needs-validation" novalidate>
        <div class="modal-dialog modal-lg" role="document">

            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Maintain Merk</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label class="form-label" for="simpleinput">Merk</label>

                                <select id="dropdownMerk" class="form-control col-md-12" type="text" name="dropdownMerk" required></select>
                                <div class="invalid-feedback">
                                    Please Select Merk
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="simpleinput">Model</label>

                                <select id="dropdownModelBarang" class="form-control col-md-12" type="text" name="dropdownModelBarang" required></select>
                                <div class="invalid-feedback">
                                    Please Select Model
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="simpleinput">Type</label>

                                <select id="dropdownType" class="form-control col-md-12" type="text" name="dropdownType" required></select>
                                <div class="invalid-feedback">
                                    Please Select Type
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="simpleinput">Warna</label>

                                <select id="dropdownWarna" class="form-control col-md-12" type="text" name="dropdownWarna" required></select>
                                <div class="invalid-feedback">
                                    Please Select Warna
                                </div>
                            </div>
                        </div>
                        <div class="col-6">

                            <div class="form-group">
                                <label class="form-label" for="simpleinput">Kota</label>

                                <select id="dropdownKota" class="form-control col-md-12" type="text" name="dropdownKota" required></select>
                                <div class="invalid-feedback">
                                    Please Select Kota
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="example-textarea">Harga OTR</label>
                                <input type="text" id="hargaOTR" name="Nama" onkeypress="return isNumberKey(event)" class="form-control" required>
                                <div class="invalid-feedback">
                                    Please Input Harga OTR
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="example-textarea">Tahun</label>
                                <input type="text" id="tahun" name="Tahun" onkeypress="return isNumberKey(event)" class="form-control" required>
                                <div class="invalid-feedback">
                                    Please Input Tahun
                                </div>
                            </div>

                            <div class="form-group">
                                <input type='file' id="imgInp" />
                                <img id="uploadImage" src="#" width="200" height="200" alt="your image" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning waves-effect waves-themed" data-dismiss="modal">Cancel</button>
                    <button type="button" id="btn-save" class="btn btn-success waves-effect waves-themed"> <span class="fal fa-check mr-1"></span>Submit</button>

                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <script type="text/javascript">

        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }
        var url = "";
        var imageUrl = "";
        $(document).ready(function () {
            moment.locale('ID');
            url = "@ViewBag.url_api";
            imageUrl = url;
            imageUrl = imageUrl.replace("api", "");

            $.ajax({
                url: url + "Merk/GetAllWithoutFilter",
                contentType: 'application/json',
                dataType: 'json',
                type: "GET",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                success: function (response) {
                    if (response.isSuccess) {
                        $.each(response.listModel, function (key, entry) {
                            $("#dropdownMerk").append($('<option></option>').attr('value', entry.id).text(entry.name));
                        })
                    } else {
                        toastr["error"](response.message);
                    }
                },
                error: function (jqXHR, text, errorThrown) {
                    console.log(jqXHR + " " + text + " " + errorThrown);
                }
            });

            $.ajax({
                url: url + "Kota/GetAllKotaWithoutFilter",
                contentType: 'application/json',
                dataType: 'json',
                type: "GET",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                success: function (response) {
                    if (response.isSuccess) {
                        $.each(response.listKota, function (key, entry) {
                            $("#dropdownKota").append($('<option></option>').attr('value', entry.id).text(entry.name));
                        })
                    } else {
                        toastr["error"](response.message);
                    }
                },
                error: function (jqXHR, text, errorThrown) {
                    console.log(jqXHR + " " + text + " " + errorThrown);
                }
            });

            $.ajax({
                url: url + "Warna/GetAllWithoutFilter",
                contentType: 'application/json',
                dataType: 'json',
                type: "GET",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                success: function (response) {
                    if (response.isSuccess) {
                        $.each(response.data, function (key, entry) {
                            $("#dropdownWarna").append($('<option></option>').attr('value', entry.id).text(entry.name));
                        })
                    } else {
                        toastr["error"](response.message);
                    }
                },
                error: function (jqXHR, text, errorThrown) {
                    console.log(jqXHR + " " + text + " " + errorThrown);
                }
            });

            $('#tableBarang').dataTable({
                language: {
                    processing: "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
                },
                processing: true,
                serverSide: true,
                initComplete: function () {
                    $(this.api().table().container()).find("input").parent().wrap("<form>").parent().attr("autocomplete", "off");
                },
                bStateSave: true,
                fnStateSave: function (oSettings, oData) {
                    localStorage.setItem('offersDataTables', JSON.stringify(oData));
                },
                fnStateLoad: function (oSettings) {
                    return JSON.parse(localStorage.getItem('offersDataTables'));
                },
                ajax: {
                    url: url + "Barang/GetAll",
                    contentType: "application/json",
                    type: "GET",
                    dataType: "JSON",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                    },
                    data: function (a) {
                        return a;
                    },
                    dataSrc: function (json) {
                        json.draw = json.draw;
                        json.recordsTotal = json.recordsTotal;
                        json.recordsFiltered = json.recordsFiltered;
                        json.data = json.listModel;
                        var return_data = json;
                        return return_data.data;
                    }
                },
                responsive: true,
                columns: [
                    {
                        data: "namaMerk",
                        width: "15%"
                    },
                    {
                        data: "namaModelBarang",
                        width: "15%"
                    },
                    {
                        data: "namaTypeBarang",
                        width: "15%"
                    },
                    {
                        data: "namaWarna",
                        width: "15%"
                    },

                    {
                        data: "hargaOtr",
                        width: "15%"
                    },
                    {
                        data: "year",
                        width: "15%"
                    },
                    {
                        mRender: function (a, e, t) {
                            if (t.photoPath != "" && t.photoPath != null) {
                                return '<img src="' + t.photoPath + '" width="50" height="50" alt="your image" />';
                            }
                            else {

                                return '<img src="#" width="20px" height="20px" alt="No Image" />';
                            }

                        }
                    },
                    {
                        mRender: function (a, e, t) {
                            return '<a class="btn btn-xs btn-success waves-effect waves-themed"  data-id="' + t.id + '" data-merkID="' + t.merkBarangID + '" data-modelID="' + t.modelBarangID + '" data-typeBarangID="' + t.typeBarangId + '" data-warnaID="' + t.warnaId + '"   data-hargaOTR="' + t.hargaOtr + '"  data-Photo="' + t.photoPath + '" data-KotaID="' + t.kotaID + '" data-Year="' + t.year +'" data-toggle="modal" data-target="#ModalEdit"><i class="fas fa-edit"></i></a> '
                                + '<a class="btn btn-xs btn-danger waves-effect waves-themed"   data-id="' + t.id + '" data-toggle="modal" data-target="#ModalDelete"><i class="fas fa-trash-alt"></i></a>';
                        },
                        width: "12%"
                    }
                ]
            });


            function resetModal() {

                $('#uploadImage').attr('src', "");
                var $t = $('[data-dismiss=modal]'),
                    target = $t[0].href || $t.data("target") || $t.parents('.modal') || [];
                $(target)
                    .find("input,textarea,select")
                    .val('')
                    .end()
                    .find("input[type=checkbox], input[type=radio]")
                    .prop("checked", "")
                    .end();
            }

            $("#ModalDelete").on("show.bs.modal", function (e) {
                $('#BarangID').val(e.relatedTarget.getAttribute('data-id'));
            });

            $('#ModalEdit').on('show.bs.modal', function (e) {
                resetModal();
                $('#HiddenModelID').val(e.relatedTarget.getAttribute('data-modelID'));
                $('#HiddenTypeID').val(e.relatedTarget.getAttribute('data-typeBarangID'));
                if (e.relatedTarget.getAttribute('data-Photo') !== "null") {
                    $('#uploadImage').attr('src', e.relatedTarget.getAttribute('data-Photo'));
                }
                $('#dropdownModelBarang option').remove();
                $('#dropdownType option').remove();
                $('#BarangID').val(e.relatedTarget.getAttribute('data-id'));
                $('#dropdownMerk').val(e.relatedTarget.getAttribute('data-merkID'))
                $('#dropdownKota').val(e.relatedTarget.getAttribute('data-KotaID'))
                $('#dropdownWarna').val(e.relatedTarget.getAttribute('data-warnaID'))
                $('#hargaOTR').val(e.relatedTarget.getAttribute('data-hargaOTR'));
                $('#tahun').val(e.relatedTarget.getAttribute('data-Year'));
                var valuesMerk = {

                    merkID: $('#dropdownMerk').val()
                }
                SetModelDropdown(valuesMerk);

                var valuesModelBarang = {

                    ModelBarangID: e.relatedTarget.getAttribute('data-modelID')
                }
                SetTypeDropdown(valuesModelBarang);
                $('#dropdownType').val(e.relatedTarget.getAttribute('data-typeBarangID'))
            });

            var forms = document.getElementsByClassName('needs-validation');
            var button = document.getElementById("btn-save");

            var validation = Array.prototype.filter.call(forms, function (form) {
                button.addEventListener('click', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {

                        LoadingMask.show();
                        var values = {
                            ID: ($("#BarangID").val()) ? $("#BarangID").val() : 0,
                            Name: $('#dropdownMerk option:selected').text() + " " + $('#dropdownModelBarang option:selected').text() + "" + $('#dropdownType option:selected').text(),
                            HargaOtr: $('#hargaOTR').val(),
                            WarnaID: $('#dropdownWarna').val(),
                            TypeBarangID: $('#dropdownType').val(),
                            PhotoPath: $('#ImagePath').val(),
                            KotaID: $('#dropdownKota').val(),
                            Year: $('#tahun').val()
                        };

                        $.ajax({
                            url: url + "Barang/AddPost",
                            contentType: 'application/json',
                            dataType: 'json',
                            type: "POST",
                            beforeSend: function (xhr) {
                                xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                            },
                            data: JSON.stringify(values),
                            success: function (response) {
                                if (response.isSuccess) {
                                    LoadingMask.hide();
                                    $("#ModalEdit").modal('hide');
                                    //$(document.body).removeClass('modal-open');
                                    $('.modal-backdrop').remove();
                                    toastr["success"](response.message);
                                    $('#tableBarang').DataTable().ajax.reload();
                                } else {
                                    LoadingMask.hide();
                                    toastr["error"](response.message);
                                }
                            },
                            error: function (jqXHR, text, errorThrown) {
                                console.log(jqXHR + " " + text + " " + errorThrown);
                            }
                        });

                    }
                    form.classList.add('was-validated');
                });
            });

            $('#btn-delete').on('click', function (e) {

                var values = {
                    ID: $("#BarangID").val()
                }

                $.ajax({
                    url: url + "Barang/DeletePost",
                    type: "POST",
                    dataType: 'json',
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                    },
                    contentType: "application/json",
                    data: JSON.stringify(values),
                    success: function (response) {
                        if (response.isSuccess) {
                            toastr["success"](response.message);
                            $('#tableBarang').DataTable().ajax.reload();
                            $("#ModalDelete").modal('hide');
                            $(document.body).removeClass('modal-open');
                            $('.modal-backdrop').remove();
                        } else {
                            toastr["error"](response.message);
                        }
                    }
                });
            });
        });
        $("#dropdownMerk").change(function () {

            $("#dropdownModelBarang option").remove();
            $("#dropdownType option").remove();
            var values = {

                merkID: $('#dropdownMerk').val()
            }

            SetModelDropdown(values);
        });
        $("#dropdownModelBarang").change(function () {

            $("#dropdownType option").remove();
            var values = {

                ModelBarangID: $('#dropdownModelBarang').val()
            }

            SetTypeDropdown(values);
        });

        function SetTypeDropdown(values) {
            $.ajax({
                url: url + "TypeBarang/GetAllWithModelBarangID",
                contentType: 'application/json',
                dataType: 'json',
                type: "POST",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                data: JSON.stringify(values),
                success: function (response) {
                    if (response.isSuccess) {

                        $.each(response.listModel, function (key, entry) {
                            $("#dropdownType").append($('<option></option>').attr('value', entry.id).text(entry.name));

                        })
                    } else {
                        toastr["error"](response.message);
                    }
                    if (($("#HiddenTypeID").val()) ? $("#HiddenTypeID").val() : 0 > 0) {
                        $("#dropdownType").val($("#HiddenTypeID").val());
                    }
                },
                error: function (jqXHR, text, errorThrown) {
                    console.log(jqXHR + " " + text + " " + errorThrown);
                }
            });
        }

        function SetModelDropdown(values) {
            $.ajax({
                url: url + "ModelBarang/GetModelWithMerkID",
                contentType: 'application/json',
                dataType: 'json',
                type: "POST",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                data: JSON.stringify(values),
                success: function (response) {
                    if (response.isSuccess) {
                        $("#dropdownModelBarang").append($('<option></option>').attr('value', 0).text("Pilih Model"));
                        $.each(response.listModel, function (key, entry) {
                            $("#dropdownModelBarang").append($('<option></option>').attr('value', entry.id).text(entry.name));
                        })
                    } else {
                        toastr["error"](response.message);
                    }
                    if (($("#HiddenModelID").val()) ? $("#HiddenModelID").val() : 0 > 0) {
                        $("#dropdownModelBarang").val($("#HiddenModelID").val());
                    }
                },
                error: function (jqXHR, text, errorThrown) {
                    console.log(jqXHR + " " + text + " " + errorThrown);
                }
            });
        }



        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#uploadImage').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function () {

            if ($("#imgInp").val() == "") {
                $('#ImagePath').val("");
                return;
            }

            var inputFile = $('#imgInp')[0].files[0];
            var pathFile = inputFile.name;
            var ekstensiOk = /(\.jpg|\.png)$/i;
            if (!ekstensiOk.exec(pathFile)) {
                alert('Silakan upload file yang memiliki ekstensi .jpg/.png/');
                inputFile.name = '';
                return false;
            }
            // your ajax submit
            var formData = new FormData();
            formData.append('file', $('#imgInp')[0].files[0]);
            //formData.append('FileToBeDelete', FileLogoTobeDelete);
            LoadingMask.show();
            $.ajax({
                type: 'post',
                url: url + 'Barang/UploadImageBarang',
                data: formData,
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                success: function (filename) {

                    fileName = filename;
                    $('.custom-file-label').html(filename);
                    $('#ImagePath').val(filename);
                    $('#uploadImage').attr('src', filename);
                    LoadingMask.hide();
                },
                processData: false,
                contentType: false,
                error: function (response) {
                    LoadingMask.hide();
                    console.log(response);
                }
            });
            LoadingMask.hide();
        });
    </script>
}