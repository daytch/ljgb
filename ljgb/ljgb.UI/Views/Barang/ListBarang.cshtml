<!-- modal Delete alert -->
<div class="modal modal-alert fade" id="ModalDelete" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Apakah anda yakin akan menghapus data ini ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            @*<div class="modal-body">
                    Modal text description...
                </div>*@
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btn-delete" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Add-->
<div class="modal fade" id="ModalEdit" role="dialog">
    <form class="needs-validation" novalidate>
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Maintain Merk</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label class="form-label" for="simpleinput">Merk</label>

                        <select id="dropdownMerk" class="form-control col-md-12" type="text" name="dropdownMerk" required></select>
                        <div class="invalid-feedback">
                            Please Select Merk
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="simpleinput">Model</label>

                        <select id="dropdownModelBarang" class="form-control col-md-12" type="text" name="dropdownModelBarang" required></select>
                        <div class="invalid-feedback">
                            Please Select Model
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="simpleinput">Type</label>

                        <select id="dropdownType" class="form-control col-md-12" type="text" name="dropdownType" required></select>
                        <div class="invalid-feedback">
                            Please Select Type
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="simpleinput">Warna</label>

                        <select id="dropdownWarna" class="form-control col-md-12" type="text" name="dropdownWarna" required></select>
                        <div class="invalid-feedback">
                            Please Select Warna
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="form-label" for="example-textarea">Harga OTR</label>
                        <input type="text" id="hargaOTR" name="Nama" class="form-control" required>
                        <div class="invalid-feedback">
                            Please Input Harga OTR
                        </div>
                    </div>

                    <div>
                        <input type='file' id="imgInp" />
                        <img id="uploadImage" src="#" width="200" height="200" alt="your image" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning waves-effect waves-themed" data-dismiss="modal">Cancel</button>
                    <button type="button" id="btn-save" class="btn btn-success waves-effect waves-themed"> <span class="fal fa-check mr-1"></span>Submit</button>

                </div>
            </div>

        </div>
    </form>
</div>

