                ]
            });


            function resetModal() {
                var $t = $('[data-dismiss=modal]'),
                    target = $t[0].href || $t.data("target") || $t.parents('.modal') || [];
                $(target)
                    .find("input,textarea,select")
                    .val('')
                    .end()
                    .find("input[type=checkbox], input[type=radio]")
                    .prop("checked", "")
                    .end();
            }

            $("#ModalDelete").on("show.bs.modal", function (e) {
                $('#BarangID').val(e.relatedTarget.getAttribute('data-id'));
            });

            $('#ModalEdit').on('show.bs.modal', function (e) {
                $('#uploadImage').attr('src', "~/UploadImageBarang/20191113193851014_city_big-ben_london_clock_tower_england_25574_3840x2160.jpg");
                resetModal();
                $('#dropdownModelBarang option').remove();
                $('#dropdownType option').remove();
                $('#BarangID').val(e.relatedTarget.getAttribute('data-id'));
                $('#dropdownMerk').val(e.relatedTarget.getAttribute('data-merkID'))
               
                $('#dropdownWarna').val(e.relatedTarget.getAttribute('data-warnaID'))
                $('#hargaOTR').val(e.relatedTarget.getAttribute('data-hargaOTR'));
                var valuesMerk = {

                    merkID: $('#dropdownMerk').val()
                }
                SetModelDropdown(valuesMerk);
                $('#dropdownModelBarang').val(e.relatedTarget.getAttribute('data-modelID'))
                var valuesModelBarang = {

                    ModelBarangID: e.relatedTarget.getAttribute('data-modelID')
                }
                SetTypeDropdown(valuesModelBarang);
                $('#dropdownType').val(e.relatedTarget.getAttribute('data-typeBarangID'))
            });

            var forms = document.getElementsByClassName('needs-validation');
            var button = document.getElementById("btn-save");

            var validation = Array.prototype.filter.call(forms, function (form) {
                button.addEventListener('click', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {
                        debugger;
                        var values = {
                            ID: ($("#BarangID").val()) ? $("#BarangID").val() : 0,
                            Name: $('#dropdownMerk option:selected').text() + " " + $('#dropdownModelBarang option:selected').text() + "" + $('#dropdownType option:selected').text(),
                            HargaOtr: $('#hargaOTR').val(),
                            WarnaID: $('#dropdownWarna').val(),
                            TypeBarangID: $('#dropdownType').val(),
                            PhotoPath: $('#ImagePath').val(),
                        };

                        $.ajax({
                            url: url + "Barang/AddPost",
                            contentType: 'application/json',
                            dataType: 'json',
                            type: "POST",
                            data: JSON.stringify(values),
                            success: function (response) {
                                if (response.isSuccess) {
                                    $("#ModalEdit").modal('hide');
                                    $(document.body).removeClass('modal-open');
                                    $('.modal-backdrop').remove();
                                    toastr["success"](response.message);
                                    $('#tableBarang').DataTable().ajax.reload();
                                } else {
                                    toastr["error"](response.message);
                                }
                            },
                            error: function (jqXHR, text, errorThrown) {
                                console.log(jqXHR + " " + text + " " + errorThrown);
                            }
                        });
                    }
                    form.classList.add('was-validated');
                });
            });

