@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            moment.locale('ID');
            var url = "@ViewBag.url_api";

            $.ajax({
                url: url + "Provinsi/GetAllForDropdown",
                contentType: 'application/json',
                dataType: 'json',
                type: "GET",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                success: function (response) {
                    if (response.isSuccess) {
                        $.each(response.listProvinces, function (key, entry) {
                            $("#Provinsi").append($('<option></option>').attr('value', entry.id).text(entry.text));
                        })
                    } else {
                        toastr["error"](response.message);
                    }
                },
                error: function (jqXHR, text, errorThrown) {
                    console.log(jqXHR + " " + text + " " + errorThrown);
                }
            });

            //$("#Provinsi").on("change", function () {

            //    $.ajax({
            //        url: url + "Kota/GetAllForDropdown?ProvinsiID="+$(this).val(),
            //        contentType: 'application/json',
            //        dataType: 'json',
            //        type: "GET",
            //        beforeSend: function (xhr) {
            //            xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
            //        },
            //        success: function (response) {
            //            if (response.isSuccess) {
            //                $.each(response.listKotas, function (key, entry) {
            //                    $("#Kota").append($('<option></option>').attr('value', entry.id).text(entry.text));
            //                })
            //            } else {
            //                toastr["error"](response.message);
            //            }
            //        },
            //        error: function (jqXHR, text, errorThrown) {
            //            console.log(jqXHR + " " + text + " " + errorThrown);
            //        }
            //    });
            //});
            $.ajax({
                url: url + "Kota/GetAllKotaWithoutFilter",
                contentType: 'application/json',
                dataType: 'json',
                type: "GET",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                },
                success: function (response) {
                    if (response.isSuccess) {
                        $.each(response.listKota, function (key, entry) {
                            $("#Kota").append($('<option></option>').attr('value', entry.id).text(entry.name));
                        })
                    } else {
                        toastr["error"](response.message);
                    }
                },
                error: function (jqXHR, text, errorThrown) {
                    console.log(jqXHR + " " + text + " " + errorThrown);
                }
            });

            $("#Kota").on("change", function () {

                $.ajax({
                    url: url + "Dealer/GetAllForDropdown?KotaID="+$(this).val(),
                    contentType: 'application/json',
                    dataType: 'json',
                    type: "GET",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                    },
                    success: function (response) {
                        if (response.isSuccess) {
                            $.each(response.listDealer, function (key, entry) {
                                $("#Dealer").append($('<option></option>').attr({ 'value': entry.id, 'data-code': entry.code }).text(entry.text));
                            })
                        } else {
                            toastr["error"](response.message);
                        }
                    },
                    error: function (jqXHR, text, errorThrown) {
                        console.log(jqXHR + " " + text + " " + errorThrown);
                    }
                });
            });

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            var button = document.getElementById("save");
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                button.addEventListener('click', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {
                        
                        var userData = {
                            Id: ($("#UserID").val()) ? $("#UserID").val() : 0,
                            Nama: $("#Nama").val(),
                            Email: $("#Email").val(),
                            Password: $("#Password").val(),
                            Telp: $("#Telp").val(),
                            Alamat: $("#Alamat").val(),
                            JenisKelamin: $("#JenisKelamin").val(),
                            KotaId: $("#Kota").val(),
                            KodeDealer: $('#Dealer option:selected').attr('data-code'),
                            isAdminPortal: true
                        }

                        $.ajax({
                            url: url + "User/SaveSalesman",
                            type: "POST",
                            dataType: 'json',
                            beforeSend: function (xhr) {
                                xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                            },
                            contentType: "application/json",
                            data: JSON.stringify(userData),
                            success: function (response) {

                                if (response.isSuccess) {
                                    $("#tableSalesman").DataTable().ajax.reload();
                                    $("#ModalEdit").modal('hide');
                                    $(document.body).removeClass('modal-open');
                                    $('.modal-backdrop').remove();
                                    toastr["success"](response.message);
                                    $('#tbuser').DataTable().ajax.reload();
                                } else {
                                    toastr["error"](response.message);
                                }
                            }
                        });
                    }
                    form.classList.add('was-validated');
                });
                    });

            $('#tableSalesman').dataTable({
                language: {
                    processing: "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
                },
                processing: true,
                serverSide: true,
                initComplete: function () {
                    $(this.api().table().container()).find("input").parent().wrap("<form>").parent().attr("autocomplete", "off");
                },
                ajax: {
                    url: url + "User/GetSalesman",
                    contentType: "application/json",
                    type: "GET",
                    dataType: "JSON",
                    data: function (a) {
                        return a;
                    },
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                    },
                  
                    dataSrc: function (json) {
                        json.draw = json.draw;
                        json.recordsTotal = json.recordsTotal;
                        json.recordsFiltered = json.recordsFiltered;
                        json.data = json.datasalesman;
                        var return_data = json;
                        return return_data.data;
                    }
                },
                responsive: true,
                columns: [
                    {
                        data: "nama",
                        width: "25%"
                    },
                    {
                        data: "email",
                        width: "15%"
                    },
                    {
                        data: "telp",
                        width: "15%"
                    },
                    {
                        mRender: function (a, e, t) {
                            return (t.verifiedDate === null) ? " - " : moment(t.verifiedDate).format('L');
                        },
                        width: "15%"
                    },
                    {
                        mRender: function (a, e, t) {
                            return (t.verifiedBy === null) ? " - " : t.verifiedBy;
                        },
                        width: '23%'
                    },
                    {
                        mRender: function (a, e, t) {
                            return '<a class="btn btn-xs btn-success waves-effect waves-themed" data-detailid="' + t.detailID + '" data-id="' + t.id + '" data-nama="' + t.nama + '" data-email="' + t.email + '" data-telp="' + t.telp + '" data-toggle="modal" data-target="#ModalEdit"><i class="fas fa-edit"></i></a> '
                                + '<a class="btn btn-xs btn-danger waves-effect waves-themed" data-detailid="' + t.detailID + '" data-toggle="modal" data-target="#ModalDelete"><i class="fas fa-trash-alt"></i></a>';
                        },
                        width: "12%"
                    }
                ]
            });

            function resetModal() {
                
                var $t = $('[data-dismiss=modal]'),
                    target = $t[0].href || $t.data("target") || $t.parents('.modal') || [];
                $(target)
                    .find("input,textarea,select")
                    .val('')
                    .end()
                    .find("input[type=checkbox], input[type=radio]")
                    .prop("checked", "")
                    .end();
            }

            $("#ModalDelete").on("show.bs.modal", function (e) {
                $('#UserID').val(e.relatedTarget.getAttribute('data-detailid'));
            });

            $('#ModalEdit').on('show.bs.modal', function (e) {

                
                $('.form-group').removeClass('has-error has-feedback');
                $('.form-group').find('small.help-block').hide();
                $('.form-group').find('i.form-control-feedback').hide();
                var id = e.relatedTarget.getAttribute('data-id');

                resetModal();
                var title = (e.relatedTarget.innerText.toLowerCase().indexOf("add") !== -1) ? e.relatedTarget.innerText : "Edit";
                $('#JenisKelamin option:eq(0)').prop('selected', true);
                $('#Provinsi option:eq(0)').prop('selected', true);
                $('#Kota option:eq(0)').prop('selected', true);
                $('#Dealer option:eq(0)').prop('selected', true);

                $("#modalTitle").html(title + " Salesman");
                if (id !== null && id !== "") {

                    $.ajax({
                        url: url + "User/GetSalesmanById?id=" + id,
                        contentType: 'application/json',
                        dataType: 'json',
                        type: "GET",
                        beforeSend: function (xhr) {
                            xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                        },
                        success: function (response) {
                            
                            if (response.isSuccess) {
                                $('#Kota option').remove();
                                $('#Dealer option').remove();

                                $('#UserID').val(response.id);
                                $('#Nama').val(response.nama);
                                $('#Email').val(response.email);
                                $('#Telp').val(response.telp);
                                $('#JenisKelamin').val(response.jenisKelamin);
                                $('#Provinsi').val(response.provinsiId);
                                $('#Alamat').val(response.alamat);
                                
                                $.ajax({
                                    url: url + "Kota/GetAllForDropdown?ProvinsiID=" + response.provinsiId,
                                    contentType: 'application/json',
                                    dataType: 'json',
                                    type: "GET",
                                    beforeSend: function (xhr) {
                                        xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                                    },
                                    success: function (response) {
                                        if (response.isSuccess) {
                                            $.each(response.listKotas, function (key, entry) {
                                                $("#Kota").append($('<option></option>').attr('value', entry.id).text(entry.text));
                                            })
                                        } else {
                                            toastr["error"](response.message);
                                        }
                                    },
                                    error: function (jqXHR, text, errorThrown) {
                                        console.log(jqXHR + " " + text + " " + errorThrown);
                                    }
                                });


                                $.ajax({
                                    url: url + "Dealer/GetAllForDropdown?KotaID=" + response.kotaId,
                                    contentType: 'application/json',
                                    dataType: 'json',
                                    type: "GET",
                                    beforeSend: function (xhr) {
                                        xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                                    },
                                    success: function (response) {
                                        if (response.isSuccess) {
                                            $.each(response.listDealer, function (key, entry) {
                                                $("#Dealer").append($('<option></option>').attr({ 'value': entry.id, 'data-code': entry.code }).text(entry.text));
                                            })
                                            $('#Dealer option:selected').attr('data-code');
                                        } else {
                                            toastr["error"](response.message);
                                        }
                                    },
                                    error: function (jqXHR, text, errorThrown) {
                                        console.log(jqXHR + " " + text + " " + errorThrown);
                                    }
                                });

                                $('#Kota').val(response.kotaId);
                                $("#Dealer option").each(function () {
                                    if ($(this).attr('data-code') == response.kodeDealer)
                                        $(this).attr("selected", "selected");
                                });
                            } else {
                                toastr["error"](response.message);
                            }
                        },
                        error: function (jqXHR, text, errorThrown) {
                            console.log(jqXHR + " " + text + " " + errorThrown);
                        }
                    });

                } else {
                    $('#SalesmanID').val(e.relatedTarget.getAttribute('data-id'));
                    $('#UserID').val(e.relatedTarget.getAttribute('data-detailid'));
                    $('#Nama').val(e.relatedTarget.getAttribute('data-nama'));
                    $('#Email').val(e.relatedTarget.getAttribute('data-email'));
                    $('#Telp').val(e.relatedTarget.getAttribute('data-telp'));
                }
            });

            $('#btn-delete').on('click', function (e) {

                var userData = {
                    DetailID: $("#UserID").val()
                }

                $.ajax({
                    url: url + "User/DeleteUserDetail",
                    type: "POST",
                    dataType: 'json',
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('Authorization', 'Bearer ' + Cookies.get("access_token"));
                    },
                    contentType: "application/json",
                    data: JSON.stringify(userData),
                    success: function (response) {
                        if (response.isSuccess) {
                            toastr["success"](response.message);
                            $('#tableSalesman').DataTable().ajax.reload();
                            $("#ModalDelete").modal('hide');
                            $(document.body).removeClass('modal-open');
                            $('.modal-backdrop').remove();
                        } else {
                            toastr["error"](response.message);
                        }
                    }
                });
            });
        });

    </script>
}