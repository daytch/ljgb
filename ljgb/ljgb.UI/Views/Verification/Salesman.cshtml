                            <div class="col-md-8">
                                <input type="text" class="form-control col-md-12" id="Nama" placeholder="Nama" required>
                                <div class="invalid-feedback">
                                    Please input Name.
                                </div>
                            </div>
                            <input type="hidden" class="form-control" id="UserID">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="Email">Email</label>
                            </div>
                            <div class="col-md-8">
                                <input type="email" class="form-control col-md-12" id="Email" placeholder="Email" required>
                                <div class="invalid-feedback">
                                    Please input Email.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="Password">Password</label>
                            </div>
                            <div class="col-md-8">
                                <input type="password" class="form-control col-md-12" id="Password" placeholder="Password" required>
                                <div class="invalid-feedback">
                                    Please input Password.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="Telp">Telp</label>
                            </div>
                            <div class="col-md-8">
                                <input type="tel" class="form-control col-md-12" id="Telp" placeholder="Telp" required>
                                <div class="invalid-feedback">
                                    Please input telp.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="JenisKelamin">Jenis Kelamin</label>
                            </div>
                            <div class="col-md-8">
                                <select class="form-control col-md-12" id="JenisKelamin" type="text" name="Jenis Kelamin" required>
                                    <option value="">-- Please Select --</option>
