@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {
            // initialize datatable
        var url = "@ViewBag.url_api";
         var table =  $('#dt-basic-example').dataTable(
                {
                    language: {
                        processing: "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
                    },
                    processing: true,
                    serverSide: true,
                    initComplete: function () {
                        $(this.api().table().container()).find("input").parent().wrap("<form>").parent().attr("autocomplete", "off")
                    },
                    ajax: {
                        url: url + "Warna/GetWarna",
                        contentType: "application/json",
                        type: "GET",
                        dataType: "JSON",
                        data: function (a) {
                            return a
                        },
                        dataSrc: function (a) {
                            return a.draw = a.draw, a.recordsTotal = a.recordsTotal, a.recordsFiltered = a.recordsFiltered, a.data = a.data, a.data
                        }
                    },
                    responsive: true,
                    columns: [
                        {
                            data: "name",
                            width: "40%"
                        },
                        {
                            data: "description",
                            width: "40%"
                        },
                        {
                            mRender: function (a, e, t) {
                                return '<a class="btn btn-xs btn-success waves-effect waves-themed" data-id="' + t.id + '" data-toggle="modal" data-target="#myModal"><i class="fas fa-edit"></i></a> '
                                    + '<a class="btn btn-xs btn-danger waves-effect waves-themed" data-id="' + t.id + '" data-toggle="modal" data-target="#ModalConfirm"><i class="fas fa-trash-alt"></i></a>';
                        },width:'20%'
                        }
                    ]
            });


        });

    </script>
}