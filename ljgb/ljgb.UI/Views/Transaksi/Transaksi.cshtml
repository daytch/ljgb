            //                $("#tableJournal").append($('<td>' + entry.transactionStatusName + ' </td>'));
            //                $("#tableJournal").append($('<td>' + entry.created + ' </td>'));
            //            })
                       
            //        }
            //    });
                    
            //});

            $('#save').on('click', function (e) {

                if ($("#VerifiedDate").val() !== "" && $("#VerifiedBy").val() !== "") {
                    var userData = {
                        DetailID: ($("#UserDetailID").val()) ? $("#UserDetailID").val() : 0,
                        VerifiedDate: $("#VerifiedDate").val(),
                        VerifiedBy: $("#VerifiedBy").val()
                    }

                    $.ajax({
                        url: url + "User/SaveUserDetail",
                        type: "POST",
                        dataType: 'json',
                        contentType: "application/json",
                        data: JSON.stringify(userData),
                        success: function (response) {
                            if (response.isSuccess) {
                                $("#ModalEdit").modal('hide');
                                $(document.body).removeClass('modal-open');
                                $('.modal-backdrop').remove();
                                toastr["success"](response.message);
                                $('#tbuser').DataTable().ajax.reload();
                            } else {
                                toastr["error"](response.message);
                            }
                        }
                    });
                } else {
                    toastr["error"]("Please fill Verified Date and Verified By!.");
                }
            });

            $('#btn-NextLevel').on('click', function (e) {

                var values = {
                    id: $("#TransactionID").val()
                };
                $.ajax({
                    url: "https://localhost:44325/api/Transaction/ApproveTransaction",
                    contentType: 'application/json',
                    dataType: 'json',
                    type: "POST",
                    data: JSON.stringify(values),
                    success: function (data) {
                        console.log(data);
                        toastr["success"](data.message);
                        $('#tableTransaksi').DataTable().ajax.reload();
                        $("#ModalSave").modal('hide');
                        $(document.body).removeClass('modal-open');
                        $('.modal-backdrop').remove();
                    },
                    error: function (jqXHR, text, errorThrown) {
                        console.log(jqXHR + " " + text + " " + errorThrown);
                    }
                });




            });
            $('#btn-Cancel').on('click', function (e) {

                var values = {
                    id: $("#TransactionID").val()
                };
                $.ajax({
                    url: "https://localhost:44325/api/Transaction/CancelTransaction",
                    contentType: 'application/json',
                    dataType: 'json',
                    type: "POST",
                    data: JSON.stringify(values),
                    success: function (data) {
                        console.log(data);
                        toastr["success"](data.message);
                        $('#tableTransaksi').DataTable().ajax.reload();
                        $("#ModalCancel").modal('hide');
                        $(document.body).removeClass('modal-open');
                        $('.modal-backdrop').remove();
